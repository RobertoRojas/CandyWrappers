{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Create buffer schema",
    "description": "Define the functions to create buffers of CandyWrappers.",
    "definitions": {
        "1.0.0": {
            "type": "object",
            "required": [
                "task",
                "object"
            ],
            "properties": {
                "task": {
                    "type": "string",
                    "pattern": "^buffer_create$"
                },
                "object": {
                    "type": "object"
                },
                "nonewscope": {
                    "type": "boolean",
                    "enum": [true]
                },
                "buffer": {
                    "type": "boolean",
                    "enum": [true]
                }
            }
        }
    }
}
