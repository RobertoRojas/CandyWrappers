{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Show buffer schema",
    "description": "Define the functions to show buffers of CandyWrappers.",
    "definitions": {
        "1.0.0": {
            "type": "object",
            "required": [
                "task",
                "key"
            ],
            "properties": {
                "task": {
                    "type": "string",
                    "pattern": "^buffer_show$"
                },
                "key": {
                    "type": "string",
                    "pattern": "^[a-zA-Z0-9_\\-\\/\\\\]+$"
                },
                "nonewscope": {
                    "type": "boolean",
                    "enum": [true]
                }
            }
        }
    }
}
