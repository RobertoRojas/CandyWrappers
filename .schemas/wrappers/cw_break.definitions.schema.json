{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Candy wrapper break schema",
    "description": "Define the functions to break the execution of CandyWrappers.",
    "definitions": {
        "1.0.0": {
            "type": "object",
            "required": [
                "task"
            ],
            "properties": {
                "task": {
                    "type": "string",
                    "pattern": "^cw_break$"
                },
                "break": {
                    "type": "boolean"
                },
                "nonewscope": {
                    "type": "boolean",
                    "enum": [true]
                }
            }
        }
    }
}
