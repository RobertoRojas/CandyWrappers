{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Test program schema",
    "description": "Define the functions to test a program of CandyWrappers.",
    "definitions": {
        "1.0.0": {
            "type": "object",
            "required": [
                "task",
                "program"
            ],
            "properties": {
                "task": {
                    "type": "string",
                    "pattern": "^test_program$"
                },
                "program": {
                    "$ref": "1.0.0/definitions.schema.json#/definitions/path"
                }
            }
        }
    }
}