{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Definitions schema",
    "description": "Definitions to use in other schemas.",
    "definitions": {
        "id": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9_\\-\\/\\\\]+$"
        },
        "nonemptystring": {
            "type": "string",
            "minLength": 1
        },
        "color": {
            "type": "string",
            "enum": [
                "black",
                "darkBlue",
                "darkGreen",
                "darkCyan",
                "darkRed",
                "darkMagenta",
                "darkYellow",
                "gray",
                "darkGray",
                "blue",
                "green",
                "cyan",
                "red",
                "magenta",
                "yellow",
                "white"
            ]
        },
        "dependof": {
            "type": "object",
            "required": [
                "id"
            ],
            "properties": {
                "id": {
                    "$ref": "#/definitions/id"
                },
                "success": {
                    "type": "boolean"
                }
            }
        },
        "onerror": {
            "type": "string",
            "enum": [
                "break",
                "ignore",
                "silent_ignore"
            ]
        },
        "description": {
            "type": "string"
        },
        "ignore": {
            "type": "boolean"
        }
    }
}