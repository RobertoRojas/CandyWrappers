{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Shell schema",
    "description": "Define the shell functions of CandyWrappers.",
    "definitions": {
        "execute": {
            "type": "object",
            "required": [
                "task",
                "commands"
            ],
            "properties": {
                "task": {
                    "type": "string",
                    "pattern": "^execute$"
                },
                "commands": {
                    "$ref": "definitions.schema.json#/definitions/nonemptyarray"
                }
            }
        }
    }
}
