{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Shell schema",
    "description": "Define the execute wrapper to run powershell commands.",
    "definitions": {
        "execute": {
            "type": "object",
            "required": [
                "id",
                "task",
                "commands"
            ],
            "properties": {
                "id": {
                    "$ref": "definitions.schema.json#/definitions/id"
                },
                "task": {
                    "type": "string",
                    "pattern": "^execute$"
                },
                "commands": {
                    "$ref": "definitions.schema.json#/definitions/nonemptyarray"
                },
                "nonewscope": {
                    "type": "boolean"
                },
                "dependof": {
                    "$ref": "definitions.schema.json#/definitions/dependof"
                },
                "description": {
                    "$ref": "definitions.schema.json#/definitions/description"
                },
                "ignore": {
                    "$ref": "definitions.schema.json#/definitions/ignore"
                }
            }
        }
    }
}
