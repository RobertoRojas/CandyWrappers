{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Shell schema",
    "description": "Define the file system functions of CandyWrappers.",
    "definitions": {
        "create_directory": {
            "type": "object",
            "required": [
                "task",
                "path"
            ],
            "properties": {
                "task": {
                    "type": "string",
                    "pattern": "^create_directory$"
                },
                "path": {
                    "$ref": "definitions.schema.json#/definitions/path"
                },
                "force": {
                    "type": "boolean"
                }
            }
        },
        "remove_path": {
            "type": "object",
            "required": [
                "task",
                "path"
            ],
            "properties": {
                "task": {
                    "type": "string",
                    "pattern": "^remove_path$"
                },
                "path": {
                    "$ref": "definitions.schema.json#/definitions/path"
                }
            }
        },
        "set_file": {
            "type": "object",
            "required": [
                "task",
                "path"
            ],
            "properties": {
                "task": {
                    "type": "string",
                    "pattern": "^set_file$"
                },
                "path": {
                    "$ref": "definitions.schema.json#/definitions/path"
                },
                "content": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "encoding": {
                    "type": "string",
                    "enum": [
                        "ascii",
                        "bigendianunicode",
                        "bigendianutf32",
                        "oem",
                        "unicode",
                        "utf7",
                        "utf8",
                        "utf8BOM",
                        "utf8NoBOM",
                        "utf3"
                    ]
                },
                "nonewline": {
                    "type": "boolean"
                },
                "force": {
                    "type": "boolean"
                }
            }
        },
        "test_path": {
            "type": "object",
            "required": [
                "task",
                "path"
            ],
            "properties": {
                "task": {
                    "type": "string",
                    "pattern": "^test_path$"
                },
                "path": {
                    "$ref": "definitions.schema.json#/definitions/path"
                },
                "exist": {
                    "type": "boolean"
                }
            }
        },
        "compress": {
            "type": "object",
            "required": [
                "task",
                "paths",
                "destination"
            ],
            "properties": {
                "task": {
                    "type": "string",
                    "pattern": "^compress$"
                },
                "paths": {
                    "type": "array",
                    "items": {
                        "$ref": "definitions.schema.json#/definitions/path"
                    }
                },
                "destination": {
                    "$ref": "definitions.schema.json#/definitions/path"
                },
                "compression": {
                    "type": "string",
                    "enum": [
                        "Optimal",
                        "NoCompression",
                        "Fastest"
                    ]
                },
                "force": {
                    "type": "boolean"
                }
            }
        },
        "decompress": {
            "type": "object",
            "required": [
                "task",
                "path",
                "destination"
            ],
            "properties": {
                "task": {
                    "type": "string",
                    "pattern": "^decompress$"
                },
                "path": {
                    "$ref": "definitions.schema.json#/definitions/path"
                },
                "destination": {
                    "$ref": "definitions.schema.json#/definitions/path"
                },
                "force": {
                    "type": "boolean"
                }
            }
        }
    }
}
