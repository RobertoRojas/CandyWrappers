{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Wrapper schema",
    "description": "Definitions of the wrappers to use in CandyWrappers.",
    "type": "object",
    "required": [
        "wrappers"
    ],
    "properties": {
        "wrappers": {
            "type": "array",
            "minItems": 1,
            "items": {
                "anyOf": [
                    {
                        "$ref": "cw.definitions.schema.json#/definitions/cw_echo"
                    },
                    {
                        "$ref": "cw.definitions.schema.json#/definitions/cw_pause"
                    },
                    {
                        "$ref": "cw.definitions.schema.json#/definitions/cw_break"
                    },
                    {
                        "$ref": "program.definitions.schema.json#/definitions/test_program"
                    },
                    {
                        "$ref": "program.definitions.schema.json#/definitions/invoke_program"
                    },
                    {
                        "$ref": "shell.definitions.schema.json#/definitions/execute"
                    },
                    {
                        "$ref": "fs.definitions.schema.json#/definitions/test_path"
                    },
                    {
                        "$ref": "fs.definitions.schema.json#/definitions/remove_path"
                    },
                    {
                        "$ref": "fs.definitions.schema.json#/definitions/create_directory"
                    },
                    {
                        "$ref": "fs.definitions.schema.json#/definitions/set_file"
                    }
                ]
            }
        }
    }
}
