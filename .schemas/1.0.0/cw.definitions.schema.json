{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "CandyWrappers schema",
    "description": "Define the internal functions of CandyWrappers.",
    "definitions": {
        "cw_break": {
            "type": "object",
            "required": [
                "task"
            ],
            "properties": {
                "task": {
                    "type": "string",
                    "pattern": "^cw_break$"
                },
                "break": {
                    "type": "boolean"
                }
            }
        },
        "cw_echo": {
            "type": "object",
            "required": [
                "task",
                "message"
            ],
            "properties": {
                "task": {
                    "type": "string",
                    "pattern": "^cw_echo$"
                },
                "message": {
                    "$ref": "definitions.schema.json#/definitions/nonemptystring"
                },
                "foregroundcolor": {
                    "$ref": "definitions.schema.json#/definitions/color"
                },
                "backgroundcolor": {
                    "$ref": "definitions.schema.json#/definitions/color"
                },
                "stream": {
                    "type": "string",
                    "enum": [
                        "output",
                        "error"
                    ]
                }
            }
        },
        "cw_pause": {
            "type": "object",
            "required": [
                "task",
                "milliseconds"
            ],
            "properties": {
                "task": {
                    "type": "string",
                    "pattern": "^cw_pause$"
                },
                "milliseconds": {
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 2147483647
                }
            }
        }
    }
}
