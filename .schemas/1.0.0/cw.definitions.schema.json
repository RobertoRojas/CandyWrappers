{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "CandyWrappers schema",
    "description": "Define the generic functions of CandyWrappers.",
    "definitions": {
        "cw_echo": {
            "type": "object",
            "required": [
                "id",
                "task",
                "message"
            ],
            "properties": {
                "id": {
                    "$ref": "definitions.schema.json#/definitions/id"
                },
                "task": {
                    "type": "string",
                    "pattern": "^cw_echo$"
                },
                "message": {
                    "$ref": "definitions.schema.json#/definitions/nonemptystring"
                },
                "foregroundcolor": {
                    "$ref": "definitions.schema.json#/definitions/color"
                },
                "backgroundcolor": {
                    "$ref": "definitions.schema.json#/definitions/color"
                },
                "stream": {
                    "type": "string",
                    "enum": [
                        "output",
                        "error"
                    ]
                },
                "nonewscope": {
                    "type": "boolean"
                },
                "dependof": {
                    "$ref": "definitions.schema.json#/definitions/dependof"
                },
                "description": {
                    "$ref": "definitions.schema.json#/definitions/description"
                },
                "ignore": {
                    "$ref": "definitions.schema.json#/definitions/ignore"
                }
            }
        },
        "cw_pause": {
            "type": "object",
            "required": [
                "id",
                "task",
                "milliseconds"
            ],
            "properties": {
                "id": {
                    "$ref": "definitions.schema.json#/definitions/id"
                },
                "task": {
                    "type": "string",
                    "pattern": "^cw_pause$"
                },
                "milliseconds": {
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 2147483647
                },
                "nonewscope": {
                    "type": "boolean"
                },
                "dependof": {
                    "$ref": "definitions.schema.json#/definitions/dependof"
                },
                "description": {
                    "$ref": "definitions.schema.json#/definitions/description"
                },
                "ignore": {
                    "$ref": "definitions.schema.json#/definitions/ignore"
                }
            }
        },
        "cw_break": {
            "type": "object",
            "required": [
                "id",
                "task"
            ],
            "properties": {
                "id": {
                    "$ref": "definitions.schema.json#/definitions/id"
                },
                "task": {
                    "type": "string",
                    "pattern": "^cw_break$"
                },
                "break": {
                    "type": "boolean"
                },
                "nonewscope": {
                    "type": "boolean"
                },
                "dependof": {
                    "$ref": "definitions.schema.json#/definitions/dependof"
                },
                "description": {
                    "$ref": "definitions.schema.json#/definitions/description"
                },
                "ignore": {
                    "$ref": "definitions.schema.json#/definitions/ignore"
                }
            }
        }
    }
}
