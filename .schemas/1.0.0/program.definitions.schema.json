{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Program module schema",
    "description": "Define the functions of the program module.",
    "definitions": {
        "invoke_program": {
            "type": "object",
            "required": [
                "task",
                "program"
            ],
            "properties": {
                "task": {
                    "type": "string",
                    "pattern": "^invoke_program$"
                },
                "program": {
                    "$ref": "definitions.schema.json#/definitions/path"
                },
                "arguments": {
                    "$ref": "definitions.schema.json#/definitions/nonemptyarray"
                },
                "inputs": {
                    "$ref": "definitions.schema.json#/definitions/nonemptyarray"
                },
                "workingdirectory": {
                    "$ref": "definitions.schema.json#/definitions/path"
                }
            }
        },
        "test_program": {
            "type": "object",
            "required": [
                "task",
                "program"
            ],
            "properties": {
                "task": {
                    "type": "string",
                    "pattern": "^test_program$"
                },
                "program": {
                    "$ref": "definitions.schema.json#/definitions/path"
                }
            }
        }
    }
}
