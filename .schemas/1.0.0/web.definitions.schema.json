{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Shell schema",
    "description": "Define the web functions of CandyWrappers.",
    "definitions": {
        "download_file": {
            "type": "object",
            "required": [
                "task",
                "uri",
                "file"
            ],
            "properties": {
                "task": {
                    "type": "string",
                    "pattern": "^download_file$"
                },
                "uri": {
                    "$ref": "definitions.schema.json#/definitions/uri"
                },
                "file": {
                    "$ref": "definitions.schema.json#/definitions/path"
                },
                "force": {
                    "type": "boolean"
                }
            }
        }
    }
}
