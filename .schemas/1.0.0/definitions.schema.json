{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Definitions schema",
    "description": "Definitions to use in other schemas.",
    "definitions": {
        "id": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9_\\-\\/\\\\]+$"
        },
        "nonemptystring": {
            "type": "string",
            "minLength": 1
        },
        "color": {
            "type": "string",
            "enum": [
                "black",
                "darkBlue",
                "darkGreen",
                "darkCyan",
                "darkRed",
                "darkMagenta",
                "darkYellow",
                "gray",
                "darkGray",
                "blue",
                "green",
                "cyan",
                "red",
                "magenta",
                "yellow",
                "white"
            ]
        },
        "path": {
            "type": "string",
            "minLength": 1,
            "pattern": "^([a-zA-Z][:](\\|\/))?(([^<>:\"|?*])*)+$"
        },
        "uri": {
            "type": "string",
            "minLength": 1,
            "pattern": "^(?:(?:https?|ftp):\\/\\/)(?:\\S+(?::\\S*)?@)?(?:(?!(?:10|127)(?:\\.\\d{1,3}){3})(?!(?:169\\.254|192\\.168)(?:\\.\\d{1,3}){2})(?!172\\.(?:1[6-9]|2\\d|3[0-1])(?:\\.\\d{1,3}){2})(?:[1-9]\\d?|1\\d\\d|2[01]\\d|22[0-3])(?:\\.(?:1?\\d{1,2}|2[0-4]\\d|25[0-5])){2}(?:\\.(?:[1-9]\\d?|1\\d\\d|2[0-4]\\d|25[0-4]))|(?:(?:[a-z\\u00a1-\\uffff0-9]-*)*[a-z\\u00a1-\\uffff0-9]+)(?:\\.(?:[a-z\\u00a1-\\uffff0-9]-*)*[a-z\\u00a1-\\uffff0-9]+)*(?:\\.(?:[a-z\\u00a1-\\uffff]{2,}))\\.?)(?::\\d{2,5})?(?:[/?#]\\S*)?$"
        },
        "nonemptyarray": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/nonemptystring"
            }
        },
        "dependof": {
            "type": "object",
            "required": [
                "id"
            ],
            "properties": {
                "id": {
                    "$ref": "#/definitions/id"
                },
                "success": {
                    "type": "boolean"
                }
            }
        },
        "onerror": {
            "type": "string",
            "enum": [
                "break",
                "ignore",
                "silent_ignore"
            ]
        },
        "description": {
            "type": "string"
        },
        "ignore": {
            "type": "boolean"
        }
    }
}
