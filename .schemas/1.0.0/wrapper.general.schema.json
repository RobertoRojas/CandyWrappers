{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Wrapper schema",
    "description": "Definitions of the wrappers to use in CandyWrappers.",
    "type": "object",
    "required": [
        "wrappers"
    ],
    "properties": {
        "wrappers": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "required": [
                    "id"
                ],
                "properties": {
                    "id": {
                        "$ref": "definitions.schema.json#/definitions/id"
                    },                
                    "nonewscope": {
                        "type": "boolean"
                    },
                    "dependof": {
                        "$ref": "definitions.schema.json#/definitions/dependof"
                    },
                    "description": {
                        "$ref": "definitions.schema.json#/definitions/description"
                    },
                    "ignore": {
                        "$ref": "definitions.schema.json#/definitions/ignore"
                    }
                }
            }
        }
    }
}